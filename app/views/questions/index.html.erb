<h2>Questions</h2>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Menu</th>
                </tr>
            </thead>
            <tbody>
                <% @questions.each do |question| %>
                <tr>
                    <td><%= question.id %></td>
                    <td><%= link_to question.title , question_path(question.id) %></td>
                    <td><%= question.content %></td>
                    <td>[<%= link_to 'Edit' , edit_question_path(question.id) %>]
                    [<%= link_to 'Delete', question_path(question.id), method: :delete ,data:{confirm: 'Are you sure?'} %>]</td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <div>
        <p class="btn btn-warning text-secoundary" style="color: #fff;"><%= link_to 'New question' , new_question_path %></p>
        </div>
    </div>
</div>